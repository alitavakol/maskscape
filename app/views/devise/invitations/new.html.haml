.authform
  = simple_form_for(resource, as: resource_name, url: invitation_path(resource_name), html: { method: :post, role: 'form' }) do |f|
    %h3= t "devise.invitations.new.header"
    = devise_error_messages!

    - resource.class.invite_key_fields.each do |field|
      .form-group
        = f.input field, input_html: { class: 'form-control' }

    = f.button :submit, t("devise.invitations.new.submit_button"), class: 'button right'
