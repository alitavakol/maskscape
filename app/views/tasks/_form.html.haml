= form_for @task do |f|
  - if @task.errors.any?
    #error_explanation
      %h2= "#{pluralize(@task.errors.count, "error")} prohibited this task from being saved:"
      %ul
        - @task.errors.full_messages.each do |message|
          %li= message

  .field
    = f.label :title
    = f.text_field :title
  .field
    = f.label :description
    = f.text_area :description
  .field
    = f.label :visibility
    = f.number_field :visibility
  .field
    = f.label :status
    = f.number_field :status
  .field
    = f.label :urgency
    = f.number_field :urgency
  .field
    = f.label :importance
    = f.number_field :importance
  .field
    = f.label :effort
    = f.number_field :effort
  .field
    = f.label :due_date
    = f.datetime_select :due_date
  .field
    = f.label :project
    = f.text_field :project
  .field
    = f.label :creator
    = f.text_field :creator
  .field
    = f.label :x
    = f.number_field :x
  .field
    = f.label :y
    = f.number_field :y
  .field
    = f.label :color
    = f.text_field :color
  .field
    = f.label :archived
    = f.check_box :archived
  .actions
    = f.submit 'Save'
